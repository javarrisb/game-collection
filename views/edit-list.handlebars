<article>
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <h2>
    Edit List
  </h2>
  <form class="edit-list-form">
    <div>
      <input name="list-title" type="text" value="{{list.title}}" />
    </div>
    <div>
      {{format_date post.created_at}}
      |
      <a href="/list/{{list.id}}">{{list.games.length}}
        {{format_plural "game" list.games.length}}</a>
    </div>
    <button type="submit">Save list</button>
    <button type="button" class="delete-list-btn">Delete list</button>
  </form>
  <form class="game-form">
    <div>
      <textarea name="game-body"></textarea>
    </div>
    {{> games list.games}}
    <div>
      <button type="submit">add game</button>
    </div>
  </form>
</article>

<script src="/javascript/edit-list.js"></script>
<script src="/javascript/delete-list.js"></script>
<script src="/javascript/game.js"></script>